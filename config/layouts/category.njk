---
layout: base.njk
---

<div class="container">
  <div class="header">
    <div class="header__breadcrumb">
      <a class="header__link" href="/">[Home]</a>&nbsp;>&nbsp;

      {% for crumb in crumbs %}
        <a class="header__link" href="{{ crumb.url }}">{{ crumb.name }}</a>&nbsp;>&nbsp;
      {% endfor %}
      <span>{{ title }}</span>
    </div>
  </div>

  <div class="tip">
    <h1 class="post__heading">{{ title }}</h1>

    <div class="post">
      <div class="post__content">
        <p>{{ desc }}</p>

        {% if catTreeCount %}
          <h3>Category</h3>
          {% tree catTree %}
        {% endif %}
        
        {% for group in collections.groupedSnippets[category].groups %}
          <h3>Snippets: {{ group }}</h3>
          {% for snippet in collections.groupedSnippets[category].snippets[group] %}
            <p><a href="{{ snippet.url }}">{{ snippet.title }}</a></p>
          {% endfor %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>
