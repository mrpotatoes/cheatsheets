---
layout: base.njk
---

<div class="container">
  <div class="header">
    <div class="header__breadcrumb">
      <a class="header__link" href="/">[Home]</a>&nbsp;>&nbsp;

      {% for crumb in crumbs %}
        <a class="header__link" href="{{ crumb.url }}">{{ crumb.name }}</a>&nbsp;>&nbsp;
      {% endfor %}
      <span>{{ title }}</span>
    </div>
  </div>

  <div class="tip">
    <h1 class="post__heading">{{ title }}</h1>

    <div class="post">
      <div class="post__content">
        <p>{{ desc | md | safe }}</p>

        {% if catTreeCount %}
          <h3>Category</h3>
          {% tree catTree %}
        {% endif %}

        <div class="snippet-group-container">
          {% for group in collections.groupedSnippets[category].groups %}
            <div class="snippet-group-left">
              {# <h3><a href="/code/tips/{{category}}{{ group | urlize }}">{{ group }}</a></h3> #}
              <h3>{{ group }}</h3>

              <ul>
                {{ category }}
                {% for snippet in collections.groupedSnippets[category].snippets[group] %}
                  <li><a href="{{ snippet.url }}">{{ snippet.title }}</a></li>
                {% endfor %}
              </ul>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>
