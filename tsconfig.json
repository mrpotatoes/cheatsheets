{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "target": "ESNext",

    // "noImplicitAny": true,
    "strict": true,

    "baseUrl": "./",
    "paths": {
      "@utils": [ "./src/utils/index.ts" ],
      "@utils/*": [ "./src/utils/*" ],
      "@collections": [ "./src/collections/index.ts" ],
      "@collections/*": [ "./src/collections/*" ],
      "@tplfns": [ "./src/template-funcs/index.ts" ],
      "@tplfns/*": [ "./src/template-funcs/*" ],
      "@events": [ "./src/events/index.ts" ],
      "@events/*": [ "./src/events/*" ],
      "@plugins": [ "./src/plugins/index.ts" ],
      "@plugins/*": [ "./src/plugins/*" ],
      "@templates": [ "./src/templates/index.ts" ],
      "@templates/*": [ "./src/templates/*" ],
      "@transforms": [ "./src/transforms/index.ts" ],
      "@transforms/*": [ "./src/transforms/*" ],
      "@variables": [ "./src/variables/index.ts" ],
      "@variables/*": [ "./src/variables/*" ],
      "@mytypes": [ "./types/index.ts" ],
      "@mytypes/*": [ "./types/*" ],
    },
  },

  "include": [
    "./src/**/*",
    "./contents/**/*",
    "./types/*",
    "config/public/code-copy.js"
  ],

  "exclude": [
    "node_modules",
    "_site",
    "cheatsheets"
  ]
}