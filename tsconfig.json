{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "target": "ESNext",

    // "noImplicitAny": true,
    "strict": true,

    "baseUrl": "./",
    "paths": {
      "@utils": [ "./src/utils/index.ts" ],
      "@utils/*": [ "./src/utils/*" ],
      "@collections": [ "./src/11ty/collections/index.ts" ],
      "@collections/*": [ "./src/11ty/collections/*" ],
      "@tplfns": [ "./src/11ty/template-funcs/index.ts" ],
      "@tplfns/*": [ "./src/11ty/template-funcs/*" ],
      "@events": [ "./src/11ty/events/index.ts" ],
      "@events/*": [ "./src/11ty/events/*" ],
      "@plugins": [ "./src/11ty/plugins/index.ts" ],
      "@plugins/*": [ "./src/11ty/plugins/*" ],
      "@templates": [ "./src/11ty/templates/index.ts" ],
      "@templates/*": [ "./src/11ty/templates/*" ],
      "@transforms": [ "./src/11ty/transforms/index.ts" ],
      "@transforms/*": [ "./src/11ty/transforms/*" ],
      "@variables": [ "./src/11ty/variables/index.ts" ],
      "@variables/*": [ "./src/11ty/variables/*" ],
      "@mytypes": [ "./src/types/index.ts" ],
      "@mytypes/*": [ "./src/types/*" ],
    },
  },
  "include": [ "./src/**/*", "./contents/**/*" ],
  "exclude": [
    "node_modules",
    "_site",
    "cheatsheets"
  ]
}